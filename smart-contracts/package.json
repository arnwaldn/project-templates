{
  "name": "{{PROJECT_NAME}}",
  "version": "1.0.0",
  "type": "module",
  "description": "Smart Contracts with Hardhat 3, Solidity, and Viem",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:local": "hardhat ignition deploy ./ignition/modules/deploy.ts --network localhost",
    "deploy:sepolia": "hardhat ignition deploy ./ignition/modules/deploy.ts --network sepolia",
    "deploy:mainnet": "hardhat ignition deploy ./ignition/modules/deploy.ts --network mainnet",
    "node": "hardhat node",
    "verify": "hardhat verify",
    "clean": "hardhat clean",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.ts' 'ignition/**/*.ts'"
  },
  "devDependencies": {
    "hardhat": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.0",
    "@nomicfoundation/hardhat-ignition-viem": "^0.15.0",
    "@nomicfoundation/hardhat-keystore": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^2.0.0",
    "@nomicfoundation/hardhat-node-test-runner": "^1.0.0",
    "@nomicfoundation/hardhat-viem": "^3.0.0",
    "@nomicfoundation/hardhat-viem-assertions": "^1.0.0",
    "@nomicfoundation/hardhat-verify": "^3.0.0",
    "solhint": "^5.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.4.0",
    "viem": "^2.0.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0"
  }
}
