{
  "name": "game-multiplayer",
  "version": "1.0.0",
  "description": "Multiplayer Game Template (Phaser + Colyseus) - ULTRA-CREATE v23.0",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "npm run dev -w client",
    "dev:server": "npm run dev -w server",
    "build": "npm run build -w shared && npm run build -w server && npm run build -w client",
    "start": "npm run start -w server"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "keywords": ["game", "multiplayer", "colyseus", "phaser", "typescript"]
}
